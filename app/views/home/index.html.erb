<div ng-app="todo_list">
  <div class="view-container">
    <div class="container error_messages_list" style="height:70px;">
    <% flash.each do |key, value| %>
        <% key = 'warning' if key == 'alert' %>
        <% key = 'success' if key == 'notice' %>
        <div class="alert alert-<%= key %>"><i class="glyphicon glyphicon-exclamation-sign"></i> <%= value %></div>
    <% end %>
    </div>
    <form action="comments/72/attach_files" method="post" enctype="multipart/form-data">
      <input type="file" name="file" />
      <input type="submit" value="Go" />
    </form>
    <div ng-view></div>
  </div>
</div>